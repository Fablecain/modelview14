<h1>Dashboard</h1>
{{#if posts.length}}
  {{#each posts}}
    <div>
      <h2>{{this.title}}</h2>
      <p>{{this.content}}</p>
      <!-- Add buttons for edit and delete functionality if needed -->
    </div>
  {{/each}}
{{else}}
  <p>You have no posts yet.</p>
{{/if}}
<a href="/posts/new">Create a New Post</a>
